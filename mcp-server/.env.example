# MCP Server Configuration
API_PORT=8787
OPENAI_MODEL=gpt-4o-mini

# Security mode: local (permissive) | strict (enforce CORS allowlist)
MCP_SECURITY_MODE=local

# Comma-separated origins used when MCP_SECURITY_MODE=strict
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Mutable tool auth gate (recommended true outside local/dev)
MCP_BRIDGE_AUTH_ENABLED=false
MCP_BRIDGE_AUTH_TOKEN=change-me

# Comma-separated allowlist for state-changing tool calls
MCP_MUTATING_TOOL_ALLOWLIST=add_to_cart,remove_from_cart,checkout,place_order,add_to_wishlist,remove_from_wishlist

# Request guardrails for /api/mcp/call
MCP_MAX_ARGUMENT_BYTES=8192
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_WINDOW_MS=60000
MCP_RATE_LIMIT_MAX_REQUESTS=120

# Agentation -> Linear automation (optional)
AGENTATION_LINEAR_ENABLED=false
# LINEAR_API_KEY=lin_api_xxx
# AGENTATION_LINEAR_TEAM_ID=<linear-team-id>
# AGENTATION_LINEAR_PROJECT_ID=<linear-project-id-for-this-repo>
# AGENTATION_LINEAR_ENFORCE_PROJECT=true
# Optional multi-project routing map (JSON or key:value,key:value)
# AGENTATION_LINEAR_ACTIVE_PROJECT_KEY=MCP-UI-DEMO-ECOMV2
# AGENTATION_LINEAR_PROJECT_MAP={"MCP-UI-DEMO-ECOMV2":"<linear-project-id>"}
# AGENTATION_LINEAR_VERIFY_ISSUE_SCOPE=true
# AGENTATION_LINEAR_ASSIGNEE_ID=<optional-linear-user-id>
# AGENTATION_LINEAR_LABEL_ID=<optional-linear-label-id>
# LINEAR_API_URL=https://api.linear.app/graphql
