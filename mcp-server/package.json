{
  "name": "mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:products": "cross-env ENTRY=products-app vite build",
    "build:cart": "cross-env ENTRY=cart-app vite build",
    "build": "npm run build:products && npm run build:cart",
    "dev": "concurrently -n ui,srv -c blue,green \"npm run build\" \"node --watch src/index.js\"",
    "start": "node src/index.js"
  },
  "dependencies": {
    "@mcp-ui/server": "^6.1.0",
    "@modelcontextprotocol/ext-apps": "^1.1.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
