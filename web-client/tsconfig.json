{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "primitives": ["./node_modules/sds/src/ui/primitives"],
      "primitives/*": ["./node_modules/sds/src/ui/primitives/*"],
      "sds": ["./node_modules/sds/src"],
      "compositions": ["./node_modules/sds/src/ui/compositions"],
      "hooks": ["./node_modules/sds/src/ui/hooks"],
      "icons": ["./node_modules/sds/src/ui/icons"],
      "images": ["./node_modules/sds/src/ui/images"],
      "layout": ["./node_modules/sds/src/ui/layout"],
      "utils": ["./node_modules/sds/src/ui/utils"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
