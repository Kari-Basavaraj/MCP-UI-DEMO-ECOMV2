{
  "name": "mcp-ecommerce-app",
  "version": "1.0.0",
  "private": true,
  "description": "MCP-UI based e-commerce application",
  "scripts": {
    "dev:start": "npx concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev": "bash ./scripts/dev-preflight.sh && npm run dev:start",
    "dev:clean": "npm run dev",
    "dev:health": "bash ./scripts/dev-health.sh",
    "dev:server": "cd mcp-server && npm run dev",
    "dev:client": "cd web-client && npm run dev",
    "install:all": "npm install && cd mcp-server && npm install && cd ../web-client && npm install",
    "tokens:sync": "node scripts/sync-tokens.mjs sync",
    "tokens:check": "node scripts/sync-tokens.mjs check",
    "parity:capture": "node scripts/capture-widgets-actual.mjs",
    "parity:compare": "node scripts/compare-widget-parity.mjs",
    "parity:run": "npm --prefix mcp-server run build && npm run parity:capture && npm run parity:compare"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^8.2.2",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.58.2",
    "pngjs": "^7.0.0"
  }
}
